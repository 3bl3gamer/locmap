{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"sourceMap": true,
		// fixes node_modules package resolution
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"src/*": ["./*"]
		}
	},
	"exclude": ["node_modules"]
}
